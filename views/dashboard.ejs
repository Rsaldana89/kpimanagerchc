<!-- Si no se especifica anio/mes en la URL, redirigir al periodo por defecto calculado en el cliente.
     Esto permite que el periodo se ajuste al cambiar la fecha del equipo y que la URL refleje
     el periodo seleccionado.  El servidor tambi√©n aplica esta l√≥gica como respaldo. -->
<script>
  (function() {
    try {
      const url = new URL(window.location.href);
      const hasYear = url.searchParams.has('anio');
      const hasMonth = url.searchParams.has('mes');
      if (!hasYear && !hasMonth) {
        const now = new Date();
        let y = now.getFullYear();
        let m = now.getMonth() + 1;
        if (now.getDate() <= 10) {
          m -= 1;
          if (m < 1) { m = 12; y -= 1; }
        }
        url.searchParams.set('anio', y);
        url.searchParams.set('mes', m);
        window.location.replace(url.pathname + '?' + url.searchParams.toString() + (url.hash || ''));
      }
    } catch (e) {
      console.error('Redirecci√≥n de periodo por defecto fall√≥:', e);
    }
  })();
</script>

