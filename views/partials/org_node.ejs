<li>
  <div class="org-card">
    <strong><%= node.nombre %></strong>
    <% if (node.departamento) { %>
      <div class="text-muted small"><%= node.departamento %></div>
    <% } %>
  </div>

  <% if (node.children && node.children.length) { %>
    <ul>
      <% node.children.forEach(child => { %>
        <%- include('partials/org_node.ejs', { node: child }) %>
      <% }) %>
    </ul>
  <% } %>
</li>
